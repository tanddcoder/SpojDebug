@model SpojDebug.Core.Models.Account.SpojAccountModel

@if (@Model.IsUpdated == false)
{
    <form asp-action="UpdateSpojAccount" method="POST">
        <div class="form-group">
            <label asp-for="@Model.Username">Spoj User Name</label>
            <input type="text" asp-for="@Model.Username" placeholder="Your admin Spoj User Name" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Password">Your</label>
            <input type="password" asp-for="@Model.Password" placeholder="Password" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.ConfirmPassword">Confirm Your Password</label>
            <input type="password" asp-for="@Model.ConfirmPassword" placeholder="Confirm Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Update" />
        </div>
    </form>
}